<mah:MetroWindow x:Class="Warehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        BorderThickness="0"
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"

        WindowTransitionsEnabled="False"
        WindowStartupLocation="CenterScreen"
        Title="Warehouse Manager" Height="450" Width="800"
        WindowTitleBrush="#FF202225" Icon="res/icon-wm.png" Closing="MetroWindow_Closing">
    <Window.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="#FF343434" BorderBrush="{x:Null}" BorderThickness="0"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="#FF686D78" FontFamily="Segoe UI"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FFD7D3D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Background="#FF252525" >
        <Image x:Name="WImage" HorizontalAlignment="Center" Height="53" Margin="0,0,0,52" VerticalAlignment="Center" Width="100" Source="res/W.png"/>
        <Image x:Name="arehouseImage" HorizontalAlignment="Center" Height="28" Margin="80,0,0,77" VerticalAlignment="Center" Width="296" Source="res/arehouse.png" Stretch="Uniform" Visibility="Hidden"/>
        <Image x:Name="MImage" HorizontalAlignment="Center" Height="53" Margin="0,52,0,0" VerticalAlignment="Center" Width="100" Source="res/M.png"/>
        <Image x:Name="anagerImage" HorizontalAlignment="Center" Height="28" Margin="175,76,0,0" VerticalAlignment="Center" Width="296" Source="res/anager.png" Stretch="Uniform" Visibility="Hidden"/>
        <Label x:Name="nameLabel" Content="WAREHOUSE MANAGER" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI Light" FontStyle="Normal" Foreground="#FF686D78" Visibility="Hidden"/>
        <Label x:Name="tipLabel" Content="Create a section in the 'Section' menu and select it on the left bar to begin" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Center" Foreground="#FF686D78" Visibility="Hidden"/>
        <Grid x:Name="treeGrid" HorizontalAlignment="Left" Width="0" Margin="0,30,0,0">
            <Rectangle Height="30" Stroke="#FF2F3136" HorizontalAlignment="Stretch" VerticalAlignment="Top" Fill="#FF2F3136"/>
            <Rectangle Height="30" Stroke="#FF2F3136" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Fill="#FF2F3136"/>
            <Label x:Name="treeLabel" Content="LABEL" Height="30" VerticalAlignment="Top" HorizontalContentAlignment="Center" Foreground="#FFD7D3D4" FontWeight="Bold" FontSize="16" Margin="0,-2,0,0"/>
            <StackPanel x:Name="treeReturnButton" Orientation="Horizontal" VerticalAlignment="Bottom" Height="30" Cursor="Hand" PreviewMouseLeftButtonDown="treeReturnLabel_PreviewMouseLeftButtonDown">
                <Image x:Name="treeReturnImage" Height="20" Width="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5,0,0,5" Source="res/icons8-go-back-30.png"/>
                <Label x:Name="treeReturnLabel" Content="Return to" Height="25" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FFD7D3D4" FontWeight="Normal" Margin="0,0,0,2"/>
            </StackPanel>
            <TreeView x:Name="sectionTree" Background="#FF2F3136" Margin="0,29,0,29" BorderBrush="#FF2F3136" Foreground="#FFD7D3D4" SelectedItemChanged="sectionTree_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Subsections}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="res/icons8-folder-30.png" Stretch="Uniform" Height="15" Width="20"></Image>
                            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Foreground="#FFD7D3D4"></TextBlock>
                            <StackPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="addSeparateSectionContextMenuItem" Header="Add separate section" Click="AddSection_Click" />
                                    <MenuItem x:Name="addSubsectionContextMenuItem" Header="Add subsection" Click="AddSubsectionContextMenu_Click" />
                                    <MenuItem x:Name="editSectionContextMenuItem" Header="Edit" Click="EditSectionContextMenu_Click" />
                                    <MenuItem x:Name="deleteSectionContextMenuItem" Header="Delete" Click="DeleteSectionContextMenu_Click" />
                                </ContextMenu>
                            </StackPanel.ContextMenu>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.Resources>
                    <SolidColorBrush x:Key="MahApps.Brushes.ThemeBackground" Color="#FF2F3136" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="#FF3C3E44" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="#FF484A53" />
                </TreeView.Resources>
            </TreeView>
            <TreeView x:Name="sectionNoMenuTree" Background="#FF2F3136" Margin="0,29,0,29" BorderBrush="#FF2F3136" Foreground="#FFD7D3D4" SelectedItemChanged="sectionTree_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Subsections}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="res/icons8-folder-30.png" Stretch="Uniform" Height="15" Width="20"></Image>
                            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Foreground="#FFD7D3D4"></TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.Resources>
                    <SolidColorBrush x:Key="MahApps.Brushes.ThemeBackground" Color="#FF2F3136" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="#FF3C3E44" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="#FF484A53" />
                </TreeView.Resources>
            </TreeView>
            <TreeView x:Name="orderTree" Background="#FF2F3136" Margin="0,29,0,29" BorderBrush="#FF2F3136" Foreground="#FFD7D3D4" SelectedItemChanged="orderTree_SelectedItemChanged" Visibility="Hidden">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="№" Foreground="#FFD7D3D4">

                            </TextBlock>
                            <TextBlock Text="{Binding OrderNumber}" Foreground="#FFD7D3D4">

                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.Resources>
                    <SolidColorBrush x:Key="MahApps.Brushes.ThemeBackground" Color="#FF2F3136" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="#FF3C3E44" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="#FF484A53" />
                </TreeView.Resources>
            </TreeView>
            <TreeView x:Name="clientTree" Background="#FF2F3136" Margin="0,29,0,29" BorderBrush="#FF2F3136" Foreground="#FFD7D3D4" SelectedItemChanged="clientTree_SelectedItemChanged" Visibility="Hidden">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FullName}" Foreground="#FFD7D3D4">

                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.Resources>
                    <SolidColorBrush x:Key="MahApps.Brushes.ThemeBackground" Color="#FF2F3136" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="#FF3C3E44" />
                    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="#FF484A53" />
                </TreeView.Resources>
            </TreeView>
        </Grid>
        <DataGrid x:Name="productDataGrid" ColumnWidth="*" RowDetailsVisibilityMode="Collapsed" ColumnHeaderHeight="29" EnableRowVirtualization="False" AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedRow, Mode=TwoWay}" SelectionMode="Single" EnableColumnVirtualization="False" Margin="0,30,0,0" CanUserAddRows="false" BorderBrush="{x:Null}" Visibility="Hidden">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="productDataGrid_editContextMenuItem" Header="Edit" Click="EditRow_Click" />
                    <MenuItem x:Name="productDataGrid_deleteContextMenuItem" Header="Delete" Click="DeleteRow_Click" />
                    <MenuItem x:Name="productDataGrid_addToOrderContextMenuItem" Header="Add to order" Click="AddToOrder_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="20" IsReadOnly="True" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image x:Name="Expander" Width="15" Source="res/icons8-expand-arrow-30.png" PreviewMouseLeftButtonDown="Expander_Expanded" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="" Width="20" IsReadOnly="True" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image x:Name="IMG" Width="15" Source="res/icons8-signin-30.png" />
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=IsInSubsection}" Value="True">
                                    <Setter Property="Source" Value="res/icons8-logout-rounded-down-30.png" TargetName="IMG"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn x:Name="amountColumn" Header="Amount" Binding="{Binding AmountString}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border BorderThickness="0" Background="#FF2b2c31" Padding="10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="Image: " VerticalAlignment="Center" />
                                <Image x:Name="productImg" Source="{Binding Image}" Height="60" Width="60" Stretch="Uniform" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                <TextBlock x:Name="noneTextBlock" FontSize="12" Text="none" VerticalAlignment="Center" Visibility="Hidden"/>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="Description: " VerticalAlignment="Center" />
                                <TextBlock FontSize="12" VerticalAlignment="Center" Text="{Binding Description}" />
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="No additional information provided." VerticalAlignment="Center" />
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Image}" Value="{x:Null}" />
                                                    <Condition Binding="{Binding Description}" Value="" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <DataGrid x:Name="orderProductDataGrid" ColumnWidth="*" RowDetailsVisibilityMode="Collapsed" ColumnHeaderHeight="29" EnableRowVirtualization="False" AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedRow, Mode=TwoWay}" SelectionMode="Single" EnableColumnVirtualization="False" Margin="0,30,0,40" CanUserAddRows="false" BorderBrush="{x:Null}" Visibility="Hidden">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="orderProductDataGrid_deleteFromOrderContextMenuItem" Header="Delete" Click="DeleteFromOrder_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="20" IsReadOnly="True" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image x:Name="Expander" Width="15" Source="res/icons8-expand-arrow-30.png" PreviewMouseLeftButtonDown="Expander_Expanded" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding AmountInOrder}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border BorderThickness="0" Background="#FF2b2c31" Padding="10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="Image: " VerticalAlignment="Center" />
                                <Image x:Name="productImg" Source="{Binding Image}" Height="60" Width="60" Stretch="Uniform" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                <TextBlock x:Name="noneTextBlock" FontSize="12" Text="none" VerticalAlignment="Center" Visibility="Hidden"/>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="Description: " VerticalAlignment="Center" />
                                <TextBlock FontSize="12" VerticalAlignment="Center" Text="{Binding Description}" />
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="12" Text="No additional information provided." VerticalAlignment="Center" />
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Image}" Value="{x:Null}" />
                                                    <Condition Binding="{Binding Description}" Value="" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <Menu x:Name="menuStrip" Height="30" VerticalAlignment="Top" Background="#FF202225">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem x:Name="fileMenuItem" Header="File" Foreground="#FFD7D3D4" Height="30" Background="{x:Null}">
                <MenuItem x:Name="newWarehouseMenuItem" Header="New warehouse" Foreground="#FFD7D3D4" Click="NewWarehouse_Click"/>
                <Separator x:Name="newWarehouseItemSeparator"/>
                <MenuItem x:Name="saveStateMenuItem" Header="Save current state" Foreground="#FFD7D3D4" Click="Save_Click"/>
                <MenuItem Header="Load state" Foreground="#FFD7D3D4" Click="Load_Click"/>
                <Separator />
                <MenuItem Header="Generate warehouse" Foreground="#FFD7D3D4" Click="Generate_Click"/>
                <Separator x:Name="sectionViewMenuItemSeparator" />
                <MenuItem x:Name="sectionViewMenuItem" Header="Go to the products view" Foreground="#FFD7D3D4" Click="sectionViewMenuItem_Click"/>
            </MenuItem>
            <MenuItem x:Name="sectionMenuItem" Header="Section" Foreground="#FFD7D3D4" Background="{x:Null}">
                <MenuItem Header="Add separate section" Foreground="#FFD7D3D4" Click="AddSection_Click" Visibility="Collapsed"/>
                <MenuItem Header="Add subsection" Foreground="#FFD7D3D4" Click="AddSubsection_Click"/>
                <Separator x:Name="sectionMenuSeparator" />
                <MenuItem Header="Edit section" Foreground="#FFD7D3D4" Click="EditSection_Click"/>
                <MenuItem Header="Delete section" Foreground="#FFD7D3D4" Click="DeleteSection_Click"/>
            </MenuItem>
            <MenuItem x:Name="productMenuItem" Header="Product" Foreground="#FFD7D3D4" VerticalAlignment="Center" Background="{x:Null}">
                <MenuItem Header="Add product" Foreground="#FFD7D3D4" Click="AddProduct_Click"/>
                <Separator />
                <MenuItem Header="Edit product" Foreground="#FFD7D3D4" Click="EditProduct_Click"/>
                <MenuItem Header="Delete product" Foreground="#FFD7D3D4" Click="DeleteProduct_Click"/>
            </MenuItem>
            <MenuItem x:Name="orderMenuItem" Header="Order" Foreground="#FFD7D3D4" VerticalAlignment="Center" Background="{x:Null}" Visibility="Visible">
                <MenuItem x:Name="addProductToOrderMenuitem" Header="Add product to the cart" Foreground="#FFD7D3D4" Click="addProductToOrderMenuitem_Click"/>
                <MenuItem x:Name="orderProductListMenuItem" Header="Shopping cart" Foreground="#FFD7D3D4" Click="orderProductListMenuItem_Click"/>
                <MenuItem x:Name="formOrderMenuItem" Header="Form the order" Foreground="#FFD7D3D4" Click="formOrderMenuItem_Click"/>
                <Separator/>
                <MenuItem x:Name="orderListMenuItem" Header="Order list" Foreground="#FFD7D3D4" Click="orderListMenuItem_Click"/>
            </MenuItem>
            <MenuItem x:Name="administratorMenuItem" Header="Administrator" Foreground="#FFD7D3D4" VerticalAlignment="Center" Background="{x:Null}">
                <MenuItem x:Name="clientListMenuItem" Header="Client list" Foreground="#FFD7D3D4" Click="clientListMenuItem_Click"/>
                <MenuItem x:Name="activeOrdersListMenuItem" Header="Active orders list" Foreground="#FFD7D3D4" Click="activeOrdersListMenuItem_Click"/>
                <Separator/>
                <MenuItem x:Name="formAClientReportMenuItem" Header="Form a client report" Foreground="#FFD7D3D4" Click="formAClientReportMenuItem_Click"/>
                <MenuItem x:Name="formADefectReportMenuItem" Header="Form a defect report" Foreground="#FFD7D3D4" Click="formADefectReportMenuItem_Click"/>
                <MenuItem x:Name="csvReportMenuItem" Header="Form lacking products report" Foreground="#FFD7D3D4" Click="FormCSV_Click"/>
            </MenuItem>
            <MenuItem x:Name="userMenuItem" Foreground="#FFD7D3D4" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center">
                        <Label x:Name="userNameLabel" Content="Not logged in" Foreground="#FFC5C3C3" />
                        <Image x:Name="userPicture" Width="20" Height="20" Source="res/icons8-user-not-found-30.png" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    </StackPanel>
                </MenuItem.Header>
                <MenuItem x:Name="logInMenuItem" Header="Log in" Foreground="#FFD7D3D4" Click="logInMenuItem_Click"/>
                <MenuItem x:Name="signInMenuItem" Header="Sign in" Foreground="#FFD7D3D4" Click="signInMenuItem_Click"/>
                <MenuItem x:Name="logOutMenuItem" Header="Log out" Foreground="#FFD7D3D4" Click="logOutMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="sectionCreationGrid" Margin="193,30,0,0" Visibility="Hidden">
            <Rectangle x:Name="dataGridSectionDummy" Fill="#FF252525" Visibility="Visible"/>
            <Label x:Name="sectionInputLabel" Content="Enter the section name:" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Center" Foreground="#FFD7D3D4" Visibility="Visible"/>
            <TextBox x:Name="sectionNameTextbox" HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource MyWaterMarkStyle}" Tag="Section name" TextWrapping="Wrap" VerticalAlignment="Center" Width="168" Height="30" VerticalContentAlignment="Center" BorderBrush="#FF40444B" SelectionBrush="#FFDDE6EE" Background="#FF40444B" Foreground="#FFD7D3D4" TextChanged="sectionNameTextbox_TextChanged" Visibility="Visible">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Image x:Name="sectionNameApplyButton" HorizontalAlignment="Center" Height="24" Margin="0,120,0,0" VerticalAlignment="Center" Width="24" Source="res/icons8-ok-30.png" Cursor="Hand" Visibility="Visible" PreviewMouseDown="sectionNameApplyButton_PreviewMouseDown"/>
            <Label x:Name="sectionInputLabelError" Content="Error: subsection with such a name already exists" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Center" Foreground="#FFB42121" Visibility="Hidden" FontWeight="Normal" FontStyle="Normal" FontFamily="Segoe UI Light" Background="{x:Null}"/>
            <Image x:Name="sectionNameCancelButton" HorizontalAlignment="Right" Height="24" Margin="0,25,27,0" VerticalAlignment="Top" Width="24" Source="res/icons8-delete-30.png" Cursor="Hand" Visibility="Visible" PreviewMouseDown="sectionNameCancelButton_PreviewMouseDown"/>
        </Grid>
        <Grid x:Name="warehouseGenerationGrid" Margin="193,30,0,0" Visibility="Hidden">
            <Rectangle x:Name="dataGridGenerationDummy" Fill="#FF252525" Visibility="Visible"/>
            <Label Content="WAREHOUSE GENERATION" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center" Foreground="#FFD7D3D4" Visibility="Visible" FontWeight="Bold" FontStyle="Normal" FontSize="18" FontFamily="Segoe UI Semibold"/>
            <TextBox x:Name="productGenerationTextbox" HorizontalAlignment="Center" Margin="160,0,0,0" Style="{StaticResource MyWaterMarkStyle}" Tag="Number of products" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" Height="30" VerticalContentAlignment="Center" BorderBrush="#FF40444B" SelectionBrush="#FFDDE6EE" Background="#FF40444B" Foreground="#FFD7D3D4" TextChanged="sectionNameTextbox_TextChanged" Visibility="Visible">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBox x:Name="sectionGenerationTextbox" HorizontalAlignment="Center" Margin="0,0,160,0" Tag="Number of sections" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" Height="30" VerticalContentAlignment="Center" BorderBrush="#FF40444B" SelectionBrush="#FFDDE6EE" Background="#FF40444B" Foreground="#FFD7D3D4" TextChanged="sectionNameTextbox_TextChanged" Visibility="Visible">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="MyWaterMarkStyle"/>
                </TextBox.Style>
            </TextBox>
            <Image x:Name="generationApplyButton" HorizontalAlignment="Center" Height="24" Margin="0,120,0,0" VerticalAlignment="Center" Width="24" Source="res/icons8-ok-30.png" Cursor="Hand" Visibility="Visible" PreviewMouseDown="generationApplyButton_PreviewMouseDown"/>
            <Label x:Name="generationLabelError" Content="Error: subsection with such a name already exists" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Center" Foreground="#FFB42121" Visibility="Hidden" FontWeight="Normal" FontStyle="Normal" FontFamily="Segoe UI Light" Background="{x:Null}"/>
            <Image x:Name="generationCancelButton" HorizontalAlignment="Right" Height="24" Margin="0,25,27,0" VerticalAlignment="Top" Width="24" Source="res/icons8-delete-30.png" Cursor="Hand" Visibility="Visible" PreviewMouseDown="generationCancelButton_PreviewMouseDown"/>
        </Grid>
        <Grid x:Name="productCreationGrid" Margin="193,30,0,0" Visibility="Hidden">
            <Rectangle x:Name="dataGridProductDummy" Fill="#FF252525" Visibility="Visible"/>
            <Label x:Name="productInputLabel" Content="PRODUCT CREATION" HorizontalAlignment="Center" Margin="0,0,0,340" VerticalAlignment="Center" Foreground="#FFD7D3D4" Visibility="Visible" FontWeight="Bold" FontStyle="Normal" FontSize="18" FontFamily="Segoe UI Semibold"/>
